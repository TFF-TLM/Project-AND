<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CreateUserFragment"
    android:background="@color/grey">

    <ImageView
        android:id="@+id/imageAvatar"
        android:src="@drawable/logo"
        android:layout_margin="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.5"
        />

    <TextView
        android:id="@+id/question1"
        tools:hint="Question 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        />

    <TextView
        android:id="@+id/question2"
        tools:hint="Question 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/answer1"/>

    <TextView
        android:id="@+id/question3"
        tools:hint="Question 3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/answer2"/>

    <TextView
        android:id="@+id/title"
        android:text="@string/create_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageAvatar"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        />


<RadioGroup
    android:id="@+id/answer1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/question1"
    android:orientation="horizontal">

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/item1.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="item 1"
        />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/item1.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="item 1"
        />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/item1.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="item 1"
        />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/item1.4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="item 1"
        />
</RadioGroup>

    <RadioGroup
        android:id="@+id/answer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/question2"
        android:orientation="horizontal">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/item2.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item 1"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/item2.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item 1"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/item2.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item 1"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/item2.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item 1"
            />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/question3"
        android:orientation="horizontal">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/item3.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item 1"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/item3.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item 1"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/item3.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item 1"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/item3.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item 1"
            />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>